---
import BaseLayout from "../layouts/BaseLayout.astro";

const lessons: {
  number: string;
  title: string;
}[] = [
  {
    number: "03",
    title: "Basic Scene",
  },
  {
    number: "05",
    title: "Object Transformation",
  },
  {
    number: "06",
    title: "Animations",
  },
  {
    number: "07",
    title: "Cameras",
  },
  {
    number: "08",
    title: "Full Screen and resizing",
  },
  {
    number: "09",
    title: "Geometry",
  },
  {
    number: "11",
    title: "Textures",
  },
  {
    number: "12",
    title: "Materials",
  },
  {
    number: "13",
    title: "3D Text",
  },
  {
    number: "14",
    title: "Lights",
  },
];
---

<BaseLayout title="Home">
  <main class="p-4">
    <h1 class="text-3xl font-bold">Learning ThreeJS with ThreeJS Journey</h1>

    <nav class="mt-4 space-y-4">
      <section>
        <h2 class="text-xl font-semibold">Links</h2>
        <ul class="flex gap-2 flex-row">
          <li>
            <a
              href="https://github.com/raulfdm/three.js-journey"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-brand-github"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                ></path>
              </svg>
            </a>
          </li>

          <li>
            <a
              href="https://threejs-journey.com/lessons"
              class="flex"
              target="_blank"
              rel="noopener noreferrer"
            >
              Course
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-external-link"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"
                ></path>
                <path d="M11 13l9 -9"></path>
                <path d="M15 4h5v5"></path>
              </svg>
            </a>
          </li>
        </ul>
      </section>
      <section>
        <h2 class="text-xl font-semibold">Lessons</h2>
        <ul class="flex gap-1 flex-col">
          {
            lessons.map(({ number, title }) => {
              return (
                <li>
                  <a href={`/lessons/${number}`}>
                    {number} - {title}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </section>
    </nav>
  </main>
</BaseLayout>

<style lang="postcss">
  li a {
    @apply underline;
  }
</style>
